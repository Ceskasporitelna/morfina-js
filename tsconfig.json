{
	"compilerOptions": {
		"sourceMap": true,
		"module": "commonjs",
		"declaration": true,
		"target": "es5",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"types": [
			"node",
			"jasmine"
		],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": [
		"json_packages",
		"node_modules",
		"build",
		"tooling",
		"spec/*",
		"dist"
	]
}